{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "."
  },
  "include": ["./src/**/**/*.tsx", "./*.ts", "**/**/*.js", "./*.js"],
  "exclude": ["node_modules"],
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": ["off"]
      }
    }
  ]
}
